<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/item_borrower_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/item_meeting_tv_status"
        android:maxLines="1"
        android:text="借款日期:"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_borrower_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_borrower_time"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="借款类型："
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_borrower_type"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="商品名称："
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_goods_name"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:text="金额："
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_meeting_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/meeting_public_reservation"
        android:elevation="8dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="状态"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#eaeeef" />

</RelativeLayout>